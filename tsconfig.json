{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
      	"node_modules"
    ],
    "compilerOptions": {
        "incremental": true,
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "moduleResolution": "nodenext",
		"strict": true,
		"strictNullChecks": false,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"typeRoots": [
			"./@types",
			"./src/@types",
			"./node_modules/@types"
		],
		"paths": {
			"~@App/*": [ "src/app/*" ],
			"~@Domain/*": [ "src/domain/*" ],
			"~@Infra/*": [ "src/infra/*" ]
		}
	}
}
